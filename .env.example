# Example environment variables configuration
# Copy this file to .env and update with your values

# MikroTik Router Configuration
MIKROTIK_HOST=192.168.88.1
MIKROTIK_USERNAME=admin
MIKROTIK_PASSWORD=changeme
MIKROTIK_PORT=8728
MIKROTIK_USE_SSL=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_KEY=changeme-generate-secure-key
API_DEBUG=false

# Database Configuration
DATABASE_PATH=ddos_events.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=mt_ddos_monitor.log

# Detection Configuration
CHECK_INTERVAL=30
PACKET_THRESHOLD=10000
AUTO_BLOCK_ENABLED=true
BLOCK_DURATION=1h

# Notification Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=ddos-monitor@example.com
EMAIL_TO=admin@example.com

# Webhook Configuration (Optional)
WEBHOOK_URL=https://hooks.example.com/webhook
WEBHOOK_ENABLED=false

# Telegram Configuration (Optional)
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id
TELEGRAM_ENABLED=false

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_API_KEY=changeme-generate-secure-key

# Docker Configuration
COMPOSE_PROJECT_NAME=mt-ddos-monitor
